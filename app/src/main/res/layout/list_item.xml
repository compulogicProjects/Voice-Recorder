<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/vr_list_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_keyboard_voice"
                android:layout_marginStart="10dp"
                app:tint="@color/colorPrimary" />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/vr_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Recording 1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vr_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:text="10/19/2020"
                android:textSize="10dp"
                android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/vr_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_baseline_share"
                app:tint="@color/colorPrimary" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/vr_delete_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_baseline_delete"
                app:tint="@color/colorPrimary" />

            <!--     <ImageView
                     android:layout_alignParentRight="true"
                     android:id="@+id/vr_list_play"
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                     android:src="@drawable/ic_baseline_play_circle_filled_50" />
            --> </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>